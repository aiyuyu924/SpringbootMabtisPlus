<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.SpringBootMybatis.Mapper.UserLoginMapper">
    <select id="queryAll" resultType="com.example.SpringBootMybatis.Pojo.UserLogin">
        select * from user
    </select>

    <select id="queryId" resultType="com.example.SpringBootMybatis.Pojo.UserLogin">
        select * from user where id = #{id}
    </select>

    <select id="queryName" resultType="com.example.SpringBootMybatis.Pojo.UserLogin">
        select * from user where name = #{name}
    </select>

    <select id="queryAge" resultType="com.example.SpringBootMybatis.Pojo.UserLogin">
        select * from user where age = #{age}
    </select>

    <select id="queryEmail" resultType="com.example.SpringBootMybatis.Pojo.UserLogin">
        select * from user where email = #{email}
    </select>

    <delete id="Delete" parameterType="com.example.SpringBootMybatis.Pojo.UserLogin">
        delete from user
    </delete>

    <delete id="deleteId" parameterType="com.example.SpringBootMybatis.Pojo.UserLogin">
        delete from user where id = #{id}
    </delete>

    <insert id="add" parameterType="com.example.SpringBootMybatis.Pojo.UserLogin">
        insert into user values (#{id},#{name},#{age},#{email})
    </insert>

    <update id="updateId" parameterType="com.example.SpringBootMybatis.Pojo.UserLogin">
        update user set age = #{age},email = #{email},name = #{name} where id = #{id}
    </update>

</mapper>
